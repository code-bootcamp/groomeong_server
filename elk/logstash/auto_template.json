{
	"template": "auto-*",
	"index_patterns": ["autocomplete-shop-*"],
	"order": "1",
	"settings": {
		"analysis": {
			"analyzer": {
				"address_ngram_analyzer": {
					"tokenizer": "address_ngram_tokenizer"
				},
				"name_ngram_analyzer": {
					"tokenizer": "name_ngram_tokenizer"
				}
			},
			"tokenizer": {
				"address_ngram_tokenizer": {
					"type": "nGram",
					"min_gram": "2",
					"max_gram": "30"
				},
				"name_ngram_tokenizer": {
					"type": "nGram",
					"min_gram": "2",
					"max_gram": "30"
				}
			}
		},
		"max_ngram_diff": "30"
	},
	"mappings": {
		"properties": {
			"address": {
				"type": "text",
				"analyzer": "address_ngram_analyzer"
			}
		}
	}
}
